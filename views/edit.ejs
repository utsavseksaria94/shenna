<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Product</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action ="/products/<%= product._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="product[name]" value="<%= product.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="product[image]" value="<%= product.image %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="Number" name="product[price]" value="<%= product.price %>" required>
                </div>
                <div class="form-group">
					<textarea rows="4" class="form-control" type="text" name="product[description]" required><%= product.description%></textarea>
                </div>
				<div class="form-group">
					<p>Add to Featured products</p>
                    <input type="radio" name="product[isfeatured]" value="false">No
                    <input type="radio" name="product[isfeatured]" value="true">Yes
                </div>
				<div class="form-group">
                    <input type="radio" name="product[isservice]" value="true">Service
                    <input type="radio" name="product[isservice]" value="false">Product
                </div>
				<div class="form-group">
					<input type="text" name="product[serviceablearea]" value="<%= product.serviceablearea[0] %>">
					<input type="text" name="product[serviceablearea]" value="<%= product.serviceablearea[1] %>">
					<input type="text" name="product[serviceablearea]" value="<%= product.serviceablearea[2] %>">
				</div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit Product</button>
                </div>
            </form>
            <a href="/products">Go Back</a>
        </div>
    </div>
</div>


<% include partials/footer %>