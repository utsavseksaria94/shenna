<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">User Details</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="detail[name]" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="Date" name="detail[date]" required>
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="detail[address]" placeholder="Address" required>
                </div>
				<div class="form-group">
                    <input class="form-control" type="Number" name="detail[phone]" placeholder="Contact No." required>
                </div>
				<div class="form-group">
                    <input type="radio" name="detail[usertype]" value="customer" checked> Customer
                    <input type="radio" name="detail[usertype]" value="partner">Partner
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>